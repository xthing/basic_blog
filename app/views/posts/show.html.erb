	<div class="panel panel-default">
		<div class="panel-heading">
			<p>
			  <strong>Title:</strong>
			  <%= @post.title %>
			</p>
		</div>
		<div class="panel-heading">
<p>
    <!-- instead of @post.author -->
 <img class="icon" src="<%= @post.user.avatar.url %>" alt="">
new by <%= @post.user.username  %>
</p>
